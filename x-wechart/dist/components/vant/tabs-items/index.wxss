.van-tabs {
  position: relative;
  -webkit-tap-highlight-color: transparent;
}
.van-tabs__wrap {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  padding: 0 24rpx;
}
.van-tabs__wrap--page-top {
  position: fixed;
}
.van-tabs__wrap--content-bottom {
  top: auto;
  bottom: 0;
}
.van-tabs__wrap--scrollable .van-tab {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 22%;
          flex: 0 0 22%;
}
.van-tabs__scroll--card {
  border: 1px solid #f44;
  border-radius: 2px;
}
.van-tabs__nav {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-user-select: none;
          user-select: none;
}
.van-tabs__nav--line {
  height: 100%;
}
.van-tabs__nav--card {
  height: 60rpx;
}
.van-tabs__nav--card .van-tab {
  line-height: 60rpx;
  color: #f44;
  border-right: 1px solid #f44;
}
.van-tabs__nav--card .van-tab:last-child {
  border-right: none;
}
.van-tabs__nav--card .van-tab.van-tab--active {
  color: #fff;
  background-color: #f44;
}
.van-tabs__line {
  position: absolute;
  z-index: 1;
  bottom: 26rpx;
  left: 2rpx;
  width: 48rpx;
  height: 12rpx;
  background: -webkit-gradient(linear, right top, left top, from(rgba(255, 255, 255, 0.49)), to(rgba(0, 170, 166, 0.87)));
  background: -webkit-linear-gradient(right, rgba(255, 255, 255, 0.49) 0%, rgba(0, 170, 166, 0.87) 100%);
  background: linear-gradient(270deg, rgba(255, 255, 255, 0.49) 0%, rgba(0, 170, 166, 0.87) 100%);
  border-radius: 8rpx;
}
.van-tabs--line {
  padding-top: 88rpx;
}
.van-tabs--line .van-tabs__wrap {
  height: 88rpx;
}
.van-tabs--card {
  padding-top: 60rpx;
  margin: 0 15px;
}
.van-tabs--card .van-tabs__wrap {
  height: 60rpx;
}
.van-tabs__content {
  overflow: hidden;
}
.van-tabs__track {
  position: relative;
}
.van-tab {
  position: relative;
  min-width: 0;
  /* hack for flex ellipsis */
  font-size: 28rpx;
  font-weight: 400;
  line-height: 88rpx;
  color: #777777;
  text-align: center;
  cursor: pointer;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-box-flex: 0!important;
  -webkit-flex: none!important;
          flex: none!important;
  padding-left: 0;
  padding-right: 44rpx;
}
.van-tab--active {
  font-weight: 500;
  color: #262626;
}
.van-tab--disabled {
  color: #c9c9c9;
}
.van-tab__title--dot::after {
  display: inline-block;
  width: 8px;
  height: 8px;
  vertical-align: middle;
  background-color: #f44;
  border-radius: 100%;
  content: '';
}
.van-tab__title__info {
  position: relative !important;
  top: -1px !important;
  display: inline-block;
  -webkit-transform: translateX(0) !important;
          transform: translateX(0) !important;
}
