.van-card {
  position: relative;
  padding: 5px 15px;
  font-size: 12px;
  color: #262626;
  background-color: #fafafa;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.van-card__header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.van-card__header--center {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.van-card__thumb {
  position: relative;
  width: 90px;
  height: 90px;
  margin-right: 10px;
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
}
.van-card__thumb:empty {
  display: none;
}
.van-card__img {
  width: 100%;
  height: 100%;
}
.van-card__content {
  position: relative;
  min-width: 0;
  /* hack for flex box ellipsis */
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.van-card__title,
.van-card__desc {
  word-break: break-all;
}
.van-card__title {
  font-weight: bold;
  line-height: 16px;
}
.van-card__desc {
  line-height: 20px;
  color: #7d7e80;
}
.van-card__bottom {
  line-height: 20px;
}
.van-card__price {
  display: inline-block;
  font-weight: bold;
  color: #f44;
}
.van-card__origin-price {
  display: inline-block;
  margin-left: 5px;
  font-size: 10px;
  color: #7d7e80;
  text-decoration: line-through;
}
.van-card__num {
  float: right;
}
.van-card__tag {
  position: absolute;
  top: 2px;
  left: 0;
}
.van-card__footer {
  width: 100%;
  text-align: right;
  -webkit-box-flex: 0;
  -webkit-flex: none;
          flex: none;
}
