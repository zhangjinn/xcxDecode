.filter-header {
  width: 100%;
  background: #FFFFFF;
  padding: 0 24rpx;
  z-index: 9999;
}
.filter-header .tabs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-items: center;
  padding: 14rpx 0;
}
.filter-header .tabs .tab {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.filter-header .tabs .tab .tab-title {
  position: relative;
  font-size: 28rpx;
  color: #AAAAAA;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.filter-header .tabs .tab .tab-title .title-text {
  position: relative;
  padding-bottom: 12rpx;
}
.filter-header .tabs .tab .tab-title .title-line {
  width: 32rpx;
  height: 8rpx;
}
.filter-header .tabs .tab .tab-title .reddot {
  position: absolute;
  top: 0;
  right: -52rpx;
  font-size: 20rpx;
  text-align: center;
  color: #FFFFFF;
  background: #E10F0F;
  border-radius: 200rpx 200rpx 200rpx 0rpx;
  border: 2rpx solid #FFFFFF;
  padding: 3rpx 8rpx;
}
.filter-header .tabs .tab .tab-title .moreAmount {
  right: -62rpx;
}
.filter-header .tabs .tab .active {
  font-weight: 500;
  color: #262626;
}
.filter-header .tabs .tab .active .title-line {
  background: -webkit-gradient(linear, left top, left bottom, from(#54D6D2), to(#00AAA6));
  background: -webkit-linear-gradient(top, #54D6D2 0%, #00AAA6 100%);
  background: linear-gradient(180deg, #54D6D2 0%, #00AAA6 100%);
  border-radius: 4rpx;
}
.filter-header .search .header-search {
  padding: 12rpx 0;
}
.filter-header .search .header-search .van-search {
  padding: 0;
}
.filter-header .search .header-search .van-search__content {
  background-color: #F7F7F7;
}
.filter-header .search .search-left-icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
  color: #AAAAAA;
  margin-right: 16rpx;
}
